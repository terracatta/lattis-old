<%= simple_form_for(@location) do |f| %>
  <%= f.input :name %>
  <%= f.input :building_name %>
  <%= f.input :floor_number %>
  <%= f.input :room_number %>
  <%= f.input :key_number %>
  <%= f.input :phone %>
  <%= button "Cancel", @location %>
  <%= f.button :submit, class: "button bright" %>
<% end %>
