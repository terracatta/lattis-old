<header id="masthead">
    <%= image_tag 'lattis_logo.png', class: 'logo' %>
    <nav id="user-nav">
      <%= link_to avatar(current_user, size: '32x32',
       include_name: true), current_user %>
      <ul>
        <li>
          <%= link_to "Settings", edit_user_path(current_user) %>
        </li>
        <li>
          <%= link_to('Logout', destroy_user_session_path,
           :method => :delete) %>
        </li>
      </ul>
    </nav>
</header>
