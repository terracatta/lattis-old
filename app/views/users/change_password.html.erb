<% content_for :content_header do %>
  <%= image_tag @user.gravatar_url,
   size: "32x32", style: 'float: left;  padding-right: 10px;' %>
   <h1><%= link_to('Users', users_path) %> / <%= link_to @user, @user %>
    / Update Password </h1>
<% end %>

<%= simple_form_for(@user, url: update_password_user_path(@user)) do |f| %>
  <%= f.input :current_password %>
  <hr>
  <%= f.input :password, :autocomplete => "off"  %>
  <%= f.input :password_confirmation %>
  <%= button "Cancel", @user   %>
  <%= f.button :submit, class: "button bright" %>
<% end %>
