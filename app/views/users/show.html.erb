<% content_for :content_header do %>
  <%= image_tag @user.gravatar_url,
   size: "32x32", style: 'float: left;  padding-right: 10px;' %>
   <h1><%= link_to('Users', users_path) %> / <%= @user %></h1>
  <nav class="content-actions">
    <ul>
      <li>
        <% if can? :edit, @user %>
          <%= button "Edit", edit_user_path %>
        <% end %>

        <% if can? :change_password, @user %>
          <%= button "Change Password", change_password_user_path, button_type: "bright" %>
        <% end %>
      </li>
    </ul>
</nav>
<% end %>
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Position:</b>
  <%= @user.position %>
</p>

<p>
  <b>Enabled:</b>
  <%= @user.enabled? %>
</p>

<p>
  <b>Administator</b>
  <%= @user.admin? %>
</p>
