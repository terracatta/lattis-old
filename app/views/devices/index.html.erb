<h1>Listing devices</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Serial</th>
    <th>Device model</th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%= device.name %></td>
    <td><%= device.type %></td>
    <td><%= device.serial %></td>
    <td><%= device.device_model_id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Device', new_device_path %>
