<%= simple_form_for(@device) do |f| %>
    <%= f.input :name %>
    <%= f.input :serial %>
    <%= f.input :type, :collection => ['TmsStimulator', 'Coil', 'TdcsStimulator'] %>
    <%= f.association :device_model %>
    <%= button "Cancel" , @device %>
    <%= f.button :submit, class: "button bright" %>
<% end %>
