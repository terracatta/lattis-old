<%= simple_form_for(@brain_area) do |f| %>
    <%= f.input :name, hint: "Ex: Dorsolateral Prefrontal Cortex" %>
    <%= f.input :short_name, hint: "Ex: DLPFC" %>
    <%= f.input :hemisphere, :collection => ['Left', 'Right'] %>

    <%= button "Cancel" , @brain_area %>
    <%= f.button :submit, class: "button bright" %>
<% end %>
