<% content_for :content_header do %>
  <h1>
   <%= link_to('Task Types', task_types_path) %> /
   <%= @task_type.name %>
 </h1>
  <nav class="content-actions">
    <ul>
      <li>
        <% if can? :edit, @task_type %>
          <%= button "Edit", edit_task_type_path %>
        <% end %>
      </li>
      <li>
        <% if can? :destroy, @task_type %>
          <%= button 'Destroy', @task_type,
           method: :delete, data: {
            confirm: 'This will permanently destroy the current item. Are you sure?'
          } %>
        <% end %>
      </li>
    </ul>
</nav>
<% end %>

<p>
  <b>Name:</b>
  <%= @task_type.name %>
</p>

<p>
  <b>Description:</b>
  <%= @task_type.description %>
</p>
